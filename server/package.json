{
    "name": "wealthwatch-server",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsc-watch --onSuccess 'npm run start'",
        "build": "rm -rf dist/ && tsc --sourceMap false",
        "start": "dotenvx run -f ../.env.dev -- node --inspect dist/index.js",
        "start:deploy": "dotenvx run -- node dist/index.js",
        "lint": "eslint src/"
    },
    "lint-staged": {
        "*": [
            "eslint --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "wealthwatch-shared": "file:../shared/dist/",
        "@dotenvx/dotenvx": "^1.36.0",
        "@logtail/pino": "^0.5.2",
        "@tsconfig/node-lts": "^22.0.1",
        "@tsconfig/strictest": "^2.0.5",
        "axios": "^1.8.2",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.41.2",
        "connect-pg-simple": "^10.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csrf-csrf": "^3.1.0",
        "date-fns": "^4.1.0",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "helmet": "^8.0.0",
        "ioredis": "^5.5.0",
        "jose": "^5.10.0",
        "js-sha256": "^0.11.0",
        "jwt-decode": "^4.0.0",
        "method-override": "^3.0.0",
        "pg": "^8.13.3",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "plaid": "^31.0.0",
        "qs": "^6.14.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.1",
        "@types/method-override": "^3.0.0",
        "@types/node": "^22.13.4",
        "@types/pg": "^8.11.11",
        "@types/qs": "^6.9.18",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "eslint": "^9.20.1",
        "globals": "^15.15.0",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1"
    }
}
