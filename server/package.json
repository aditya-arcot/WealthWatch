{
    "name": "wealthwatch-server",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/ && tsc",
        "dev": "dotenvx run -f ../config/env/.env.dev -- tsx watch --inspect src/main.ts",
        "lint": "eslint --fix --max-warnings=0 src/",
        "start": "dotenvx run -f ../config/env/.env.dev -- tsx --inspect src/main.ts",
        "start:deploy": "dotenvx run -- tsx src/main.ts",
        "test": "dotenvx run -f ../config/env/.env.dev -- vitest dev --coverage --ui",
        "test:deploy": "dotenvx run -- vitest run --coverage"
    },
    "lint-staged": {
        "*": [
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@aditya-arcot/wealthwatch-shared": "^3.0.3",
        "@dotenvx/dotenvx": "^1.48.4",
        "@logtail/pino": "^0.5.5",
        "@tsconfig/node-lts": "^22.0.2",
        "@tsconfig/strictest": "^2.0.5",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.56.9",
        "connect-pg-simple": "^10.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csrf-csrf": "^4.0.3",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "express-session": "^1.18.2",
        "helmet": "^8.1.0",
        "ioredis": "^5.7.0",
        "jose": "^6.0.12",
        "js-sha256": "^0.11.1",
        "jwt-decode": "^4.0.0",
        "method-override": "^3.0.0",
        "pg": "^8.16.3",
        "pino": "^9.7.0",
        "pino-pretty": "^13.1.1",
        "plaid": "^37.0.0",
        "qs": "^6.14.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "tsx": "^4.20.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/express-session": "^1.18.2",
        "@types/method-override": "^3.0.0",
        "@types/node": "^24.2.0",
        "@types/pg": "^8.15.5",
        "@types/qs": "^6.14.0",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.32.0",
        "globals": "^16.3.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.38.0",
        "vite": "^7.0.6",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    }
}
