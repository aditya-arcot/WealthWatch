{
    "name": "wealthwatch-server",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "rm -rf dist/ && tsc -p tsconfig.build.json --sourceMap false",
        "dev": "tsc-watch -p tsconfig.build.json --onSuccess 'npm run start'",
        "lint": "eslint --fix --max-warnings=0 src/",
        "start": "dotenvx run -f ../config/env/.env.dev -- node --inspect dist/main.js",
        "start:deploy": "dotenvx run -- node dist/main.js",
        "test": "dotenvx run -f ../config/env/.env.dev -- vitest dev --coverage --ui",
        "test:deploy": "dotenvx run -- vitest run --coverage"
    },
    "lint-staged": {
        "*": [
            "eslint --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.44.1",
        "@logtail/pino": "^0.5.5",
        "@tsconfig/node-lts": "^22.0.1",
        "@tsconfig/strictest": "^2.0.5",
        "axios": "^1.9.0",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.53.0",
        "connect-pg-simple": "^10.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csrf-csrf": "^4.0.3",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "express-session": "^1.18.1",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.1",
        "jose": "^6.0.11",
        "js-sha256": "^0.11.1",
        "jwt-decode": "^4.0.0",
        "method-override": "^3.0.0",
        "pg": "^8.16.0",
        "pino": "^9.7.0",
        "pino-pretty": "^13.0.0",
        "plaid": "^34.0.0",
        "qs": "^6.14.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "wealthwatch-shared": "npm:@aditya-arcot/wealthwatch-shared@^2.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.18",
        "@types/express": "^5.0.2",
        "@types/express-session": "^1.18.1",
        "@types/method-override": "^3.0.0",
        "@types/node": "^22.15.21",
        "@types/pg": "^8.15.2",
        "@types/qs": "^6.14.0",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "eslint": "^9.27.0",
        "globals": "^16.2.0",
        "tsc-watch": "^7.0.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1",
        "vitest": "^3.1.4"
    }
}
