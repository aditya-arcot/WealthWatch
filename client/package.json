            "eslint --ext .ts,.html --fix --max-warnings=0 --no-warn-ignored",
            "prettier --write --ignore-unknown"
        ]
    },
    "dependencies": {
        "@aditya-arcot/wealthwatch-shared": "^3.0.15",
        "@angular/animations": "^20.3.7",
        "@angular/common": "^20.3.7",
        "@angular/compiler": "^20.3.7",
        "@angular/core": "^20.3.7",
        "@angular/forms": "^20.3.7",
        "@angular/platform-browser": "^20.3.7",
        "@angular/router": "^20.3.7",
        "@logtail/browser": "^0.5.6",
        "bootstrap": "^5.3.8",
        "bootstrap-icons": "^1.13.1",
        "chart.js": "^4.5.1",
        "chartjs-plugin-autocolors": "^0.3.1",
        "ng2-charts": "^8.0.0",
        "ngx-logger": "^5.0.12",
        "ngx-plaid-link": "^14.0.0",
        "rxjs": "~7.8.2",
        "uuid": "^13.0.0",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular/build": "^20.3.7",
        "@angular/cli": "^20.3.7",
        "@angular/compiler-cli": "^20.3.7",
        "@eslint/js": "^9.38.0",
        "@types/node": "^24.9.1",
        "angular-eslint": "20.5.0",
        "eslint": "^9.38.0",
        "tslib": "^2.8.1",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.2"
    }
