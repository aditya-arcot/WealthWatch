{
    "name": "wealthwatch-client",
    "private": true,
    "scripts": {
        "build": "ng build --verbose",
        "build:dev": "ng build --verbose --watch --configuration dev",
        "build:stage": "ng build --verbose --configuration stage",
        "build:test": "ng build --verbose --configuration test",
        "lint": "eslint src --ext .ts,.html --fix --max-warnings=0",
        "start": "ng serve"
    },
    "lint-staged": {
