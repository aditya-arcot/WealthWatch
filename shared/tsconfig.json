{
    "extends": [
        "@tsconfig/node-lts/tsconfig.json",
        "@tsconfig/strictest/tsconfig.json"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "listEmittedFiles": true,
        "baseUrl": "src",
        "paths": {
            "@enums/*": ["enums/*"],
            "@models/*": ["models/*"],
            "@utilities/*": ["utilities/*"]
        },
        "plugins": [
            { "transform": "typescript-transform-paths" },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": ["src"]
}
